@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/LayoutDesign.styles.css" asp-append-version="true" />
<link rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css'>
<style>
    .IndexDiv {
        position: fixed;
        background: linear-gradient(to right,#C4E0E0,#C4E0F9);
        top: 8%;
        left: 0;
        min-height: 85%;
        min-width: 100%;
        margin-top: -50px;
    }


    .CenteredContainer {
        position: absolute;
        transform: translate(-50%,-50%);
        top: 50%;
        left: 50%;
    }

        .CenteredContainer form {
            background: linear-gradient(to left,#28347d,#19767D);
            padding: 3em;
            border-radius: 20px;
        }

            .CenteredContainer form a {
                text-decoration: none;
                color: white;
                font-size: 15px;
            }

                .CenteredContainer form a:hover {
                    text-shadow: 2px 2px 6px #000040;
                }

            .CenteredContainer form input {
                border-radius: 20px;
            }

            .CenteredContainer form .btn {
                width: 150px;
                font-size: 1em;
            }

        /*.CenteredContainer form:hover {
                        margin: 8px;
                    }*/

        .CenteredContainer a, input:focus, submit:focus, button:focus {
            outline: none;
            margin: 2px;
        }

</style>
@{
    string menuTextColor = "text-white";
}
<div class="container IndexDiv" style="height:100%; margin-bottom:0;">
    <div class="row bg-dark @menuTextColor">
        <div class="col-md-2 text-left">
            <img src="~/image/download.png" height="50px;" width="50px;" style="border-radius:50px; margin-right:150px; margin-top:15px;" />
        </div>
        <div class="text-center col-md-8">
            <p><h1>ITL License & Support Management</h1></p>
        </div>

    </div>
    <div class="row">
        <div class="col-md-3 CenteredContainer text-center" style="font-size:13px; padding-bottom:10px; margin-top:60px;">

            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h5 class="text-white">Create a new account.</h5>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <input asp-for="Input.UserName" class="form-control" placeholder="UserName" />
                </div></br>

                <div class="form-group">
                    <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                </div></br>
                <div class="form-group">
                    <input asp-for="Input.Password" class="form-control" placeholder="Password" type="password" />
                </div></br>
                <div class="form-group">
                    <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password" type="password" />
                </div></br>
                <input type="submit" class="btn btn-danger" value="Register"><br /></br>

                <div class="form-group">

                    <p class="@menuTextColor">
                        Have already an account? <a asp-page="./Login" class="text-white-50 fw-bold" asp-route-returnUrl="@Model.ReturnUrl">Login here</a>
                    </p>
                </div>
            </form>
        </div>

    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}