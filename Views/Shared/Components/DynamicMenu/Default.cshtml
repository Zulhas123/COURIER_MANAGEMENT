<div class="sb-sidenav-menu">
    <div class="nav">
        @foreach (var item in Model)
        {
      
                <a class="dropdown-btn nav-link text-white">
                <div class="sb-nav-link-icon"><i class="fas fa-columns" style="color:white"></i></div>
                    @item.MainMenuName
                    <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                </a>
                <div class="dropdown-container" id="@item.ActiveMenuId">
                    @foreach (var sub in item.SubMenuLists)
                    {
                    <a class="nav-link text-white" id="@sub.ActiveSubMenuId" asp-area="Identity" asp-action="@sub.ActionName" asp-controller="@sub.ControllerName">
                        <div class="sb-nav-link-icon"><i class="fas fa-plane" style="color:white"></i></div>
                                @sub.Name
                    
                    </a>
                    }

                </div>
        }


    </div>
    <script>
        var dropdown = document.getElementsByClassName("dropdown-btn");

        for (var i = 0; i < dropdown.length; i++) {
            dropdown[i].addEventListener("click", function () {
               
                var dropdownContent = this.nextElementSibling;
                
                if (dropdownContent.style.display === "block") {
                    dropdownContent.style.display = "none";
                } else {
                    dropdownContent.style.display = "block";
                }
            });
        }
    </script>
    
</div>
